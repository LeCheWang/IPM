<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:paddingLeft="5dp"
    android:background="@drawable/border_radius"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvAreaName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Khu công nghiệp Hòa Phú"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvNameFactory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="110dp"
            android:text="Khu xưởng 1"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvStatusFactory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa thuê"
            android:textSize="20dp"
            android:padding="5dp"
            android:background="@drawable/fr_stt_0"
            android:textColor="@color/text_factory_status_0"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điện tích: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tvAreaFactory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200m2"
            android:textColor="@color/black"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian bắt đầu: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tvStartAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023-06-02"
            android:textColor="@color/black"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian hết hạn: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tvEndAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023-06-02"
            android:textColor="@color/black"
            android:textSize="20dp"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp">
        <ImageView
            android:id="@+id/imgFactory"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>